<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE xml>
<configuration>
	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n- %msg%n" />
		</Console>
		<RollingFile name="MyFile" fileName="D:/app.log"
			filePattern="d:/log/totalLog-%d{MM-dd-yyyy}-%i.log">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n- %msg%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="1 MB" />
			</Policies>
			<DefaultRolloverStrategy max="2000" />
		</RollingFile>
	</appenders>
	<loggers>
		<root level="warn">
			<appender-ref ref="MyFile" />
		</root>
	</loggers>
</configuration>